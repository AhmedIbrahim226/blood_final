<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"><script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script><script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script><script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="hotspots.css">
    <link rel="text/html" href="css2/bootstrap-grid.css">
    <link rel="stylesheet" href="css2/task1.css">
    <link rel="stylesheet" type="text/css" href="file:///C:/Users/FreeComp/Downloads/Compressed/fontawesome-free-5.10.0-web_3/fontawesome-free-5.10.0-web/css/all.css">
    <script type="text/javascript"></script>
    
    <title> Life Savers</title>
</head>

<body>
    <header>
        <div class="overlay"></div>
            <div class="container">
                <div class="row align-items-center justify-content-md-between top-bar">
                    <div class="col-12 col-md-2 logo">
                        <i class="fas fa-quote-right txt-orange"></i>LiFe SaVeRs
                    </div>
                    <div class="col-12 col-md-8">
                        <nav>
                            <ul class="d-flex justify-content-center justify-content-md-end">
                                <li class="menu">
                                    <a href="/org/requests">My Requests</a>
                                </li>
                                <li class="menu">
                                    <a href="/org/addHotspot">Add Donation Hotspot</a>
                                </li>
                                <li>
                                    <a href="#">About Us</a>
                                </li>
                                <li>
                                    <a href="/logout">Log Out</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="container register">
                    <div class="row">
                        <div class="col-md-3 register-left">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT3Gu0Pq5VvyxKBUuiiT02Tcem7_LrE6sw8xBmnVKaOhqOZeiwYMSET2tPSO8azTJtzAx8&amp;usqp=CAU" alt="">
                            <h3>Current User</h3>
                            <p>We are happy to help you</p>
                        </div>
                        <div class="col-md-9 register-right">
                            <div class="box">
                            {{#each htspts}}
                                <div class="box1">
                                <iframe src="https://maps.google.com/maps?q={{location._lat}},{{location._long}}&hl=es;z=14&output=embed" width="100%" height="40%" style="border:0; border-top-left-radius: 15%; border-top-right-radius: 15%;" allowfullscreen="" loading="lazy"><br></iframe> 
                                <b><span class="txt-orange"></span></b><br><br>
                                <h7>Hotspot Name: <span class="txt-orange">{{name}}</span><br></h7>
                                <h7>Most needed: <span class="txt-orange">{{most_needed}}</span><br></h7>
                                <h7>Most Available: <span class="txt-orange">{{most_available}}</span><br></h7>
                                <div class="request-donation-preview">
                                    <button>Edit Blood Types</button>
                                    <div class="popup">
                                        <div class="overlay"></div>
                                            <div class="popup-content">
                                                <div class ="boxx">
                                                    <div class="boxx1">
                                                        <form action="/org/edit_hotspot" method="POST">
                                                        <input  name="name" value="{{name}}" hidden>
                                                        <div class="need"> <p>Most-need :
                                                            <select name="mostneed" id="Mostneed">
                                                                <option value="+A">+A</option>
                                                                <option value="-A">-A</option>
                                                                <option value="+B">+B</option>
                                                                <option value="+B">-B</option>
                                                                <option value="+AB">+AB</option>
                                                                <option value="-AB">-AB</option>
                                                                <option value="+O">+O</option>
                                                                <option value="-O">-O</option>
                                                            </select></p> 
                                                        </div>
                                                        <div class="available"> Most-available &emsp;  
                                                            <select name="mostavailable" id="MostAvailable">
                                                                <option value="+A">+A</option>
                                                                <option value="-A">-A</option>
                                                                <option value="+B">+B</option>
                                                                <option value="+B">-B</option>
                                                                <option value="+AB">+AB</option>
                                                                <option value="-AB">-AB</option>
                                                                <option value="+O">+O</option>
                                                                <option value="-O">-O</option>
                                                            </select>
                                                        </div>
                                                        <input type="text" name="avamount" placeholder="Enter Available Amount"><br>
                                                        <button type="submit" class="txt-white">ok</button>
                                                        <button class="txt-white">cancel</button>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="close">
                                                X
                                            </div>
                                            </form>
                                    </div>
                                </div>
                                    <form action="/org/deleteHotspot" method="POST">
                                <div class="donate-preview">
                                    <input name="hotspotName" value="{{name}}" hidden>
                                    <button>Delete</button>
                                    <div class="popup">
                                        <div class="overlay"></div>
                                            <div class="popup-content">
                                                <div class ="boxx">
                                                    <div class="boxx1" style="padding: 10%;font-family: cursive;">
                                                        <i class="fas fa-quote-left txt-orange"></i>
                                                        <h1>Are You Sure</h1>
                                                        <button class="txt-white">yes</button>
                                                        <button class="txt-white">no</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="close">
                                                X
                                            </div>
                                    </div>
                                </div>
                            </div>
                                    </form>
                        {{/each}}
                    </div>
                </div>
                    </div>
                </div>

            </div>
        
    <script src="jQuery/jquery-3.4.1.min.js"></script>
    <script src="jQuery/noga.js"></script>
    <script src="js/jquery.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/main.js"></script>
</body>               